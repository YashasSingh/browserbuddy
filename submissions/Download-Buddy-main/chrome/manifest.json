{
    "manifest_version": 3,
    "name": "Download Buddy",
    "description": "Convert your images to any format automatically when downloading.",
    "version": "1.0",
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "permissions": [
        "downloads",
        "storage",
        "activeTab",
        "offscreen"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}